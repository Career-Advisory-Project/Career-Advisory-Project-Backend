generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Course {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  updatedAt DateTime
  createdAt DateTime
  courseNo String
  name String
  descTH String? 
  descENG String?
  skills Skill[]
}

model Skill {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime
  updatedAt DateTime
  name String
  descTH String? 
  descENG String?
  status String
  tag Tag[]
  rubrics Rubric[]
  courseId String? @db.ObjectId
  course Course? @relation(fields: [courseId], references: [id])

}

type Rubric {
  level   Int
  descTH  String?
  descENG String?
}

model Tag {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime
  updatedAt DateTime
  name String
  abbr String 
  skillId String @db.ObjectId
  skill Skill @relation(fields: [skillId], references: [id])
}