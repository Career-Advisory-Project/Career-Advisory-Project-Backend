generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Course {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  updatedAt DateTime
  createdAt DateTime
  courseNo String
  name String
  descTH String? 
  descENG String?
}

type Rubric {
  level   Int
  descTH  String?
  descENG String?
}

model Tag {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  updatedAt DateTime @updatedAt()
  createdAt DateTime @default(now())
  name      String
  abbr      String?
  tagGroupId String? @db.ObjectId
  tagGroup TagGroup? @relation(fields: [tagGroupId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  skillId String? @db.ObjectId
}

model TagGroup {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  updatedAt DateTime @updatedAt()
  createdAt DateTime @default(now())
  name      String
  color     String?
  tag       Tag[]
}

model Skill {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime
  updatedAt DateTime
  name String
  descTH String? 
  descENG String?
  status String
  tag String[]
  rubrics Rubric[]
}

model CourseSkill{
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
  courseNo  String
  name      String
  descTH    String? 
  descENG   String?
  skills    SkillData[]
}

type SkillData {
  id      String   @db.ObjectId
  name    String
  descTH  String?
  descENG String?
  tag     String[]
  rubrics RubricData[]
}

type RubricData {
  level   Int
  descTH  String?
  descENG String?
}
model TeacherCourse {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  teacherID String @unique
  titleTH String?
  titleEN String?
  firstNameTH String?
  firstNameEN String?
  lastNameTH String?
  lastNameEN String?
  courseNos   String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}